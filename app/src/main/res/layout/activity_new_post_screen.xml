<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_new_post_screen"
    tools:context=".NewPost_screen"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:id="@+id/back_icon_cross"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cross"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New post"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        >



        <ImageView
            android:id="@+id/post_image"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:clipToOutline="true"
            android:background="@drawable/picture_border" />




    </LinearLayout>


    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/caption_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Add a caption..."
        android:background="@drawable/caption_box"
        android:padding="16dp"
        android:textColorHint="#C6C0BA"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/share_button"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_button"
        android:text="Share"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>