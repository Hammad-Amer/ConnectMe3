<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/feed_post">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginBottom="5dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp">

        <FrameLayout
            android:id="@+id/user_profile_container"
            android:layout_width="35dp"
            android:layout_height="match_parent"

            android:background="@drawable/brown_story"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_profile_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:strokeColor="#56422A"
                app:strokeWidth="2dp"
                app:shapeAppearanceOverlay="@style/CircleShape" />

        </FrameLayout>

        <TextView
            android:id="@+id/feed_post_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@+id/user_profile_container"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/feed_post_options"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/insta_feed_dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/feed_post_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp">

        <ImageButton
            android:id="@+id/feed_post_heart"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/feed_heart"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/emptyheart"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/empty_heart"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/likecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/feed_post_heart"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            />

        <ImageButton
            android:id="@+id/feed_post_comment"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/comment_feed"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/likecount"

            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/feed_post_share"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/share_feed"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/feed_post_comment"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/feed_post_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/feed_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginBottom="5dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/feed_post_username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="status"
            android:textSize="15dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/feed_post_username2"
            app:layout_constraintTop_toTopOf="@id/feed_post_username2"
            app:layout_constraintBottom_toBottomOf="@id/feed_post_username2"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>