<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:id="@+id/activity_edit_profile"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/done_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginStart="180dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:layout_marginTop="32dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/Main_profile_pic_editprofile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:alpha=".6"

                android:src="@drawable/pf1"
                app:shapeAppearanceOverlay="@style/CircleShape"


                />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/camera"
                android:layout_gravity="center"

                />

        </FrameLayout>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olivia Daniel"
        android:layout_marginTop="20dp"
        android:textSize="28dp"
        android:layout_marginLeft="108dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Olivia Daniel"
        android:background="@drawable/black_border"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="OliviaD"
        android:background="@drawable/black_border"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="+42 317 52548"
        android:background="@drawable/black_border"
        android:padding="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just an average 14 year old"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            android:background="@drawable/underlined_text"
            android:textColor="#A9A9A9"
            />


    </LinearLayout>


</LinearLayout>