<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatScreen"
    android:background="@color/white">

    <ImageView
        android:id="@+id/BackButton_chat"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/Username_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Henry Benjamin"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/BackButton_chat"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/Call_chat"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/phone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toEndOf="@id/Username_chat"
        />

    <ImageView
        android:id="@+id/VideoCall_chat"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/video_call"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/Call_chat"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Main_profile_pic_chat"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/pf5"
        app:layout_constraintTop_toBottomOf="@id/Username_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/CircleShape"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_profile_chat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/chat_button_1"
        android:text="View Profile"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Main_profile_pic_chat" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/view_profile_chat"
        app:layout_constraintBottom_toTopOf="@id/message_chatbox"

        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        tools:listitem="@layout/chat_message_sent"
        />

    <LinearLayout
        android:id="@+id/message_chatbox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:padding="8dp"

        android:background="@drawable/chatbox"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Typing..."
            android:background="@android:color/transparent"
            android:textColor="#0F0E0E"
            android:textColorHint="#CACACA"
            android:paddingStart="16dp"/>

        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/send_msg_2"
            android:padding="8dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>