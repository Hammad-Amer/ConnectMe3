<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ConnectMeLogo_login"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/connectme_logo"

        />


    <TextView
        android:id="@+id/WelcomeText_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/ConnectMeLogo_login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"

        />

    <TextView
        android:id="@+id/WelcomeDescrpit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We're happy to see you. Please Login to\ncontinue."
        android:textSize="18dp"
        android:layout_below="@+id/WelcomeText_login"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"

        />

    <EditText
        android:id="@+id/Username_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="@null"
        android:textSize="20dp"
        android:layout_below="@+id/WelcomeDescrpit_login"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="40dp"

        />

    <EditText
        android:id="@+id/Password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:background="@null"
        android:textSize="20dp"
        android:layout_below="@+id/Username_login"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"

        />

    <TextView
        android:id="@+id/ForgotPassword_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_below="@+id/Password_login"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#56422A"
        />

    <Button
        android:id="@+id/LoginButton_login"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/ForgotPassword_login"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Login"
        android:textSize="20dp"

        android:background="@drawable/login_button"

        />

</RelativeLayout>

