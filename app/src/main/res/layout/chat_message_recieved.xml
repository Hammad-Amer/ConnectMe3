<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp">

    <!-- Profile Picture Container -->
    <FrameLayout
        android:id="@+id/user_profile_container_DMs"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/brown_story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_profile_received"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleShape"
            app:strokeColor="@color/brown" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <!-- Chat Bubble -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_msg_2"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_message_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good to know"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/text_timestamp_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:30"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="start"/>
    </LinearLayout>

</LinearLayout>
